@model List<RequestModel>

<h3>All Requests</h3>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Employee</th>
            <th>Content</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Count > 0)
        {
            @foreach (var req in Model)
            {
                <tr>
                    <td>@req.Id</td>
                    <td>@req.EmployeeName</td>
                    <td>@req.Content</td>
                    <td>@req.Status</td>
                    <td>
                        @if (req.Status == "Pending")
                        {
                            <a asp-action="Approve" asp-route-id="@req.Id" class="btn btn-success btn-sm">Approve</a>
                            <a asp-action="Reject" asp-route-id="@req.Id" class="btn btn-danger btn-sm">Reject</a>
                        }
                        else
                        {
                            <span class="text-muted">@req.Status</span>
                        }
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center text-info">No requests found.</td>
            </tr>
        }
    </tbody>
</table>
